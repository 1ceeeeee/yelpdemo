<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restauraunts.each do |restauraunt| %>
      <tr>
        <td><%= restauraunt.name %></td>
        <td><%= restauraunt.address %></td>
        <td><%= restauraunt.phone %></td>
        <td><%= restauraunt.website %></td>
        <td><%= link_to 'Show', restauraunt, class:"btn btn-link" %></td>
        <td><%= link_to 'Edit', edit_restauraunt_path(restauraunt), class:"btn btn-link" %></td>
        <td><%= link_to 'Destroy', restauraunt, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-link" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

